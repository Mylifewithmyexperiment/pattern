                </RelativeLayout>-->
                <RelativeLayout
                    style="@style/match_wrap"
                    android:padding="@dimen/app_padding">

                    <RelativeLayout
                        android:id="@+id/relMainContainer"
                        style="@style/match_wrap"
                        android:background="@drawable/background_rounded_corner_transparent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llNumberContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/semi_transparent"
                            android:orientation="vertical"
                            android:padding="@dimen/app_padding_max">

                            <EditText
                                android:id="@+id/edtNumber"
                                style="@style/AppTheme.EditTextTransParent"
                                android:drawableEnd="@drawable/ic_contact_book"
                                android:drawableRight="@drawable/ic_contact_book"
                                android:hint="@string/hint_lbl_manually_number"
                                android:inputType="number"
                                android:maxLength="13"
                                android:textColorHint="@color/hint_color_light" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/iedtNumber"
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_margin="0dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/llNumberContainer"
                            android:background="@drawable/background_bottom_rounded_corner"
                            android:orientation="vertical"
                            android:padding="@dimen/app_padding">

                            <LinearLayout
                                android:id="@+id/llTransactionContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ivSuccessIcon"
                                android:layout_marginTop="@dimen/app_margin">

                                <TextView
                                    style="@style/AppTheme.TextView.EDTLbl"
                                    android:layout_marginBottom="@dimen/app_margin_min"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@string/lbl_avail_balance"
                                    />

                                <TextView
                                    android:id="@+id/tvBalance"
                                    style="@style/AppTheme.TextView.EDTLbl"
                                    android:layout_marginBottom="@dimen/app_margin_min"
                                    android:layout_width="0dp"
                                    android:layout_marginLeft="@dimen/app_margin"
                                    android:layout_marginStart="@dimen/app_margin"
                                    android:layout_weight="1"
                                    android:gravity="left|start"
                                    android:text="@string/lbl_price_five_hundred"/>
                            </LinearLayout>

                            <TextView
                                style="@style/AppTheme.TextView.EDTLbl"
                                android:layout_marginBottom="@dimen/app_margin_min"
                                android:text="@string/lbl_enter_amount" />


                            <EditText
                                android:id="@+id/edtAmount"
                                style="@style/AppTheme.EditText"
                                android:layout_margin="0dp"
                                android:hint="@string/hint_lbl_enter_amount"
                                android:inputType="number"
                                android:maxLength="5" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/iedtAmount"
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_margin="0dp">

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                style="@style/AppTheme.TextView.EDTLbl"
                                android:layout_marginBottom="@dimen/app_margin_min"
                                android:text="@string/lbl_comment" />


                            <EditText
                                android:id="@+id/edtComment"
                                style="@style/AppTheme.EditText"
                                android:layout_margin="0dp"
                                android:hint="@string/hint_lbl_comment"
                                android:inputType="textAutoComplete" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/iedtComment"
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_margin="0dp">

                            </android.support.design.widget.TextInputLayout>

                            <Button
                                android:id="@+id/btnContinue"
                                style="@style/AppTheme.Button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/app_btn_margin"
                                android:background="@drawable/button_rounded_corner"
                                android:text="@string/btn_transfer_now" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>

            <include
                android:id="@+id/extra_view"
                style="@style/match_match"
                layout="@layout/layout_extra_view"
                tools:visibility="gone" />

        </android.support.design.widget.CoordinatorLayout>


        <include
            android:id="@+id/layoutNavMenu"
            layout="@layout/nav_main_menu" />
    </android.support.v4.widget.DrawerLayout>
</layout>