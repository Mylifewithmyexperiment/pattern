                <RelativeLayout
                    style="@style/match_wrap"
                    android:padding="@dimen/app_padding">
                <RelativeLayout
                    android:id="@+id/relMainContainer"
                    style="@style/match_wrap"
                    android:background="@drawable/background_rounded_corner"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/llNumberContainer"
                        android:background="@color/app_bg_color"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/app_padding">

                        <TextView style="@style/AppTheme.TextView.Summary"
                            android:text="@string/lbl_transfer_to"/>
                        <TextView
                            android:id="@+id/tvNumber"
                            style="@style/AppTheme.TextView.Bold.Summary"
                            tools:text="9876543210"/>
                        <TextView
                            style="@style/AppTheme.TextView.Summary"
                            android:text="@string/lbl_transfer_amount"/>
                        <TextView
                            android:id="@+id/tvAmount"
                            style="@style/AppTheme.TextView.Bold.Summary"
                            tools:text="@string/lbl_price_five_hundred"/>
                        <TextView
                            android:id="@+id/tvLblComment"
                            style="@style/AppTheme.TextView.Summary"
                            android:text="@string/lbl_comment"
                            android:layout_margin="@dimen/app_margin_min"
                            />
                        <TextView
                            android:id="@+id/tvComment"
                            style="@style/AppTheme.TextView.Summary"
                            tools:text="hi hello this is a little bit ling comment"
                            android:maxLines="2"
                            android:layout_margin="@dimen/app_margin_min"
                            />

                        <Button
                            android:id="@+id/btnContinue"
                            style="@style/AppTheme.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/app_btn_margin"
                            android:background="@drawable/button_rounded_corner"
                            android:text="@string/btn_confirm" />

                    </LinearLayout>
                </RelativeLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>

            <include
                android:id="@+id/extra_view"
                style="@style/match_match"
                layout="@layout/layout_extra_view"
                tools:visibility="gone" />

        </android.support.design.widget.CoordinatorLayout>


