<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_header">

    <data></data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <android.support.design.widget.CoordinatorLayout
            style="@style/match_match"
            android:animateLayoutChanges="true"
            tools:visibility="visible"
            android:fitsSystemWindows="true">

            <include
                android:id="@+id/toolbar"
                layout="@layout/header_toolbar_layout" />


            <com.sterlite.dccmappfordealersterlite.customView.CustomSwipeToRefresh
                android:id="@+id/swRefreshInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="@color/app_bg_color"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.sterlite.dccmappfordealersterlite.customView.CustomRecyclerView
                        android:id="@+id/rvMakeMyPlans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/tvNotFound"
                        style="@style/AppTheme.TextView.NotFound" />

                </RelativeLayout>


            </com.sterlite.dccmappfordealersterlite.customView.CustomSwipeToRefresh>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom|start|left"
                android:layout_margin="@dimen/_24sdp"
                android:padding="@dimen/app_margin_max"
                app:backgroundTint="?attr/colorMain"
                app:srcCompat="@drawable/ic_filter"
                app:layout_anchor="@id/rvMakeMyPlans"
                app:layout_anchorGravity="bottom|start|left"
                />
<!--app:layout_behavior="sterliteapp.com.sterlitemobilecardappdesign.customView.CustomScrollAwareBehavior"-->
            <include
                android:id="@+id/extra_view"
                style="@style/match_match"
                layout="@layout/layout_extra_view"
                android:layout_below="@+id/toolbar" />


        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"

            android:background="@color/navigation_menu_color"
            android:fitsSystemWindows="false">

            <RelativeLayout
                android:id="@+id/relNavigationMainView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/ivClose"
                    style="@style/AppTheme.ImageView.NavigationIcon.Small"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end|right"
                    android:layout_margin="@dimen/app_btn_margin"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:tint="@color/navigation_header_icon_color"
                    app:srcCompat="@drawable/ic_close" />

                <TextView
                    android:id="@+id/tvRangeBar"
                    style="@style/AppTheme.TextView.NavigationMenu.Filter"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/ivClose"
                    android:maxLines="2"
                    android:text="@string/hint_lbl_mmp_filter_rangebar" />

                <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                    android:id="@+id/rbMMPfilter"
                    android:layout_below="@id/tvRangeBar"
                    android:layout_width="match_parent"
                    app:min_value="5000"
                    app:max_value="150000"
                    app:left_thumb_color_pressed="?attr/colorMain"
                    app:right_thumb_color_pressed="?attr/colorMain"
                    app:bar_color="@color/app_icon_light"
                    app:bar_highlight_color="?attr/colorMain"
                    app:left_thumb_color="@color/app_icon_light"
                    app:right_thumb_color="@color/app_icon_light"
                    android:layout_margin="@dimen/app_margin"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_below="@+id/rbMMPfilter"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMin"
                        style="@style/AppTheme.TextView"
                        android:textColor="@color/app_text_color_light"
                        android:layout_alignParentStart="true"
                        android:maxLines="2"
                        android:textSize="@dimen/app_text_medium_high"
                        android:text="0" />
                    <TextView
                        android:id="@+id/tvMax"
                        style="@style/AppTheme.TextView"
                        android:textColor="@color/app_text_color_light"
                        android:layout_alignParentEnd="true"
                        android:maxLines="2"
                        android:textSize="@dimen/app_text_medium_high"
                        android:text="0" />

                </RelativeLayout>
                <com.sterlite.dccmappfordealersterlite.customView.CustomRecyclerView
                    android:id="@+id/rvMenuContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/llFooterBtnContainer"
                    android:layout_below="@id/ivClose"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:visibility="gone"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                <LinearLayout
                    android:id="@+id/llFooterBtnContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/app_padding_min">

                    <Button
                        android:id="@+id/btnApply"
                        style="@style/AppTheme.Button.RoundedCorner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_margin_min"
                        android:layout_weight="1"
                        android:text="@string/btn_apply"
                        android:textSize="@dimen/nav_menu_filter_text_size" />

                    <!--<View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="@color/color_devider" />-->
                    <Button
                        android:id="@+id/btnReset"
                        style="@style/AppTheme.Button.RoundedCorner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_margin_min"
                        android:layout_weight="1"
                        android:text="@string/btn_reset"
                        android:textSize="@dimen/nav_menu_filter_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.NavigationView>

        <include
            android:id="@+id/layoutNavMenu"
            layout="@layout/nav_main_menu" />
    </android.support.v4.widget.DrawerLayout>
</layout>
