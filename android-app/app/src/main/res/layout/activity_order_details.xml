<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_header">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/header_toolbar_layout" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollMainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_margin="@dimen/app_margin"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/AppTheme.TextView.Bold"
                    android:text="@string/lbl_order_details"
                    android:textSize="@dimen/app_text_extra_large"
                    android:visibility="visible" />

                <RelativeLayout
                    style="@style/match_match"
                    android:visibility="visible">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardOrderIdContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_margin_min"
                        android:background="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/app_card_corner_radius_medium">

                        <LinearLayout
                            style="@style/match_wrap"
                            android:orientation="vertical"
                            android:padding="@dimen/app_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="2"
                                    android:text="@string/lbl_order_date" />

                                <TextView
                                    android:id="@+id/tvOrderDate"
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="1"
                                    tools:text="07-Dec-2017" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="2"
                                    android:text="@string/lbl_order_no" />

                                <TextView
                                    android:id="@+id/tvOrderNo"
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="1"
                                    tools:text="14520000414" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="2"
                                    android:text="@string/lbl_order_total" />

                                <TextView
                                    android:id="@+id/tvOrderTotal"
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="1"
                                    tools:text="@string/lbl_price_thousand" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="2"
                                    android:text="@string/lbl_order_status" />


                                <TextView
                                    android:id="@+id/tvOrderStatus"
                                    style="@style/AppTheme.TextView.OrderPreviewLabels"
                                    android:layout_weight="1"
                                    tools:text="pending" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvLblShipmentDetails"
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/lbl_shipment_details" />


                <RelativeLayout
                    android:id="@+id/relProductContainer"
                    style="@style/match_match">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_margin_min"
                        android:background="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/app_card_corner_radius_medium">

                        <!--<LinearLayout
                            style="@style/match_wrap"
                            android:orientation="vertical">
-->
                        <!--  <View
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_1sdp"
                              android:layout_marginBottom="@dimen/_5sdp"
                              android:background="@color/gray" />-->

                        <!--  <TextView
                              style="@style/AppTheme.TextView.Bold"
                              android:layout_width="match_parent"
                              android:layout_weight="2"
                              android:text="@string/shipped"
                              android:textSize="@dimen/_13sdp"
                              android:visibility="gone"/>
-->
                        <!--<TextView
                            android:id="@+id/tvShippingDate"
                            style="@style/AppTheme.TextView.OrderPreviewLabels"
