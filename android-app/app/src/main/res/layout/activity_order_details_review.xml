<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_header">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/header_toolbar_layout" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollMainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_margin="@dimen/app_margin"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded_corner"
                android:orientation="vertical"
                android:padding="@dimen/app_padding">

                <LinearLayout
                    style="@style/match_wrap"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/relOrderNoContainer"
                        style="@style/match_wrap"
                        android:layout_marginTop="@dimen/app_margin"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvOrderNoLbl"
                                style="@style/AppTheme.TextView.OrderPreviewLabels"
                                android:layout_width="@dimen/_65sdp"
                                android:layout_marginEnd="@dimen/app_margin_min"
                                android:layout_marginRight="@dimen/app_margin_min"
                                android:text="@string/lbl_order_no" />


                            <TextView
                                android:id="@+id/tvOrderNo"
                                style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                                android:text="" />


                            <TextView
                                android:id="@+id/tvStatus"
                                style="@style/AppTheme.TextView.Bold"
                                android:layout_width="match_parent"
                                android:gravity="right"
                                android:text=""
                                android:textSize="@dimen/app_text_regular_medium"
                                android:textColor="@color/app_default_text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvOrderDateLbl"
                                style="@style/AppTheme.TextView.OrderPreviewLabels"
                                android:layout_width="@dimen/_65sdp"
                                android:layout_marginEnd="@dimen/app_margin_min"
                                android:layout_marginRight="@dimen/app_margin_min"
                                android:text="@string/lbl_order_date" />


                            <TextView
                                android:id="@+id/tvOrderDate"
                                style="@style/AppTheme.TextView.OrderPreviewLabels"
                                android:text="" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:text="@string/your_plan_rental_detail" />


                    <RelativeLayout
                        style="@style/match_wrap"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/wrap_wrap"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPlan"
                                style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                                android:text="" />

                            <ImageView
                                android:id="@+id/ivPlanEdit"
                                style="@style/AppTheme.ImageView.OrderReviewImageView"
                                android:src="@drawable/ic_edit"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPlanAmount"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_alignParentRight="true"
                            android:text="" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlPlanBenefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin"
                        android:background="@drawable/edittext_rounded_corner">

                        <TextView
                            android:id="@+id/txtPlanBenefits"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/tvPlus"
                            android:maxLines="1"
                            android:padding="@dimen/app_margin"
                            android:text="" />

                        <TextView
                            android:id="@+id/tvPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/app_margin_max"
                            android:padding="@dimen/app_margin"
                            android:text="+"
                            android:textSize="@dimen/app_text_xx_large"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_marginTop="@dimen/app_margin_min"
                        android:layout_marginBottom="@dimen/app_margin"
                        android:text="@string/one_time_charge_will_be_added_to_your_first_bill"
                        android:visibility="gone"/>


                    <TextView
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:text="@string/delivery"
                        android:id="@+id/lbldelivery"/>

                    <RelativeLayout
                        style="@style/match_wrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            style="@style/wrap_wrap"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDelivery"
                                style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                                android:text="" />

                            <ImageView
                                android:id="@+id/ivDeliveryEdit"
                                style="@style/AppTheme.ImageView.OrderReviewImageView"
                                android:src="@drawable/ic_edit"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDeliveryAmount"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_alignParentRight="true"
                            android:text="" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvDeliveryAddress"
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:textSize="@dimen/app_text_medium"
                        android:maxLines="6"
                        android:text="" />
                    <LinearLayout
                        android:id="@+id/llInv"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:text="@string/your_number" />

                    <RelativeLayout
                        style="@style/match_wrap"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/wrap_wrap"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNumber"
                                style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                                android:text="" />

                            <ImageView
                                android:id="@+id/ivNumberEdit"
                                style="@style/AppTheme.ImageView.OrderReviewImageView"
                                android:src="@drawable/ic_edit"
                                android:visibility="gone" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvNumberAmount"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_alignParentRight="true"
                            android:text="" />

                    </RelativeLayout>


                    <TextView
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:text="@string/sim" />

                    <RelativeLayout
                        style="@style/match_wrap"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvSim"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:text="" />


                        <TextView
                            android:id="@+id/tvSimAmount"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_alignParentRight="true"
                            android:text="" />

                    </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        style="@style/match_wrap"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/AppTheme.TextView.OrderPreviewLabels"
                            android:text="@string/delivery_date_amp_time"
                            android:id="@+id/lbldeliverydate"/>

                        <TextView
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_alignParentRight="true"
                            android:text="" />

                    </RelativeLayout>

                    <LinearLayout
                        style="@style/match_wrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDeliveryDate"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:text="" />

                        <ImageView
                            android:id="@+id/ivDeliveryDate"
                            style="@style/AppTheme.ImageView.OrderReviewImageView"
                            android:src="@drawable/ic_edit"
                            android:visibility="gone" />
                    </LinearLayout>


                    <RelativeLayout
                        style="@style/match_wrap"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvFreeBenefits"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_width="wrap_content"
                            android:text="" />


                        <TextView
                            android:id="@+id/tvCheckHow"
                            style="@style/AppTheme.TextView.OrderPreviewLabels"
                            android:layout_alignParentRight="true"

                            android:textColor="?attr/colorMain" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/app_edittext_margin_top"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:background="?attr/colorMain" />

                    <!-- <TextView
                         style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                         android:layout_gravity="center"
                         android:text="@string/add_to_bill" />
 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_width="wrap_content"
                            android:text="@string/total_cost" />

                        <TextView
                            android:id="@+id/tvTotalCost"
                            style="@style/AppTheme.TextView.OrderPreviewEdittxt"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textColor="?attr/colorMain" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/chkGoGreen"
                        style="@style/AppTheme.TextView.OrderPreviewLabels"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/app_edittext_margin_top"
                        android:gravity="center"
                        android:text="@string/go_green_and_receive_your_monthly_e_bill_on"
                        android:visibility="gone"/>

                    <LinearLayout
                        style="@style/match_wrap"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvEmail"
                            style="@style/AppTheme.TextView.OrderPreviewLabels"
                            android:text="" />

                        <ImageView
                            android:id="@+id/ivEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnProceed"
                    style="@style/AppTheme.Button"
                    android:layout_marginBottom="@dimen/app_btn_margin"
                    android:layout_marginTop="@dimen/app_edittext_margin_top"
                    android:text="@string/btn_track" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/extra_view"
            layout="@layout/layout_extra_view"
            android:layout_below="@+id/toolbar"
            tools:visibility="gone" />
    </android.support.design.widget.CoordinatorLayout>
</layout>