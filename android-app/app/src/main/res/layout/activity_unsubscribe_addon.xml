                <RelativeLayout
                    style="@style/match_wrap"
                    android:padding="@dimen/app_padding">

                    <RelativeLayout
                        android:id="@+id/relMainContainer"
                        style="@style/match_wrap"
                        android:background="@drawable/background_rounded_corner_transparent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/llNumberContainer"
                            android:background="@drawable/background_bottom_rounded_corner"
                            android:orientation="vertical"
                            android:padding="@dimen/app_padding">


                            <TextView
                                style="@style/AppTheme.TextView.EDTLbl"
                                android:layout_marginBottom="@dimen/app_margin_min"
                                android:text="@string/lbl_select_number" />


                            <Spinner
                                android:id="@+id/spnNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/app_margin"
                                />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/iedtAmount"
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_margin="0dp">

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                style="@style/AppTheme.TextView.EDTLbl"
                                android:layout_marginBottom="@dimen/app_margin_min"
                                android:text="@string/lbl_select_addOn" />


                            <Spinner
                                android:id="@+id/spnAddon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/app_margin"/>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/iedtComment"
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_margin="0dp">

                            </android.support.design.widget.TextInputLayout>

                            <Button
                                android:id="@+id/btnUnsubscribe"
                                style="@style/AppTheme.Button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/app_btn_margin"
                                android:background="@drawable/button_rounded_corner"
                                android:text="@string/lbl_unsubscribe" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>

            <include
                android:id="@+id/extra_view"
                style="@style/match_match"
                layout="@layout/layout_extra_view"
                tools:visibility="gone" />

        </android.support.design.widget.CoordinatorLayout>


        <include
            android:id="@+id/layoutNavMenu"
            layout="@layout/nav_main_menu" />
    </android.support.v4.widget.DrawerLayout>
</layout>