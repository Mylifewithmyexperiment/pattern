<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_header">

    <RelativeLayout
        android:id="@+id/parent"
        style="@style/match_match"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/scrollable_toolbar" />

        <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:id="@+id/scrollMainContainer"-->
        <!--style="@style/match_match"-->
        <!--android:fillViewport="false"-->
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="@dimen/app_margin"
            android:background="@drawable/background_rounded_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:padding="@dimen/app_padding">

                <TextView
                    android:id="@+id/tvLblStoreAddress"
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_marginTop="@dimen/app_margin"
                    android:text="@string/lbl_service_experience" />

                <TextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="Please Share your experience to us"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/_11sdp" />

                <RatingBar
                    android:id="@+id/rbStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:numStars="5"
                    android:theme="@style/AppTheme.RatingBar" />

                <TextView
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_marginTop="@dimen/app_margin"
                    android:text="@string/lbl_user_experience" />

                <TextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="Please Share your experience to us"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/_11sdp" />

                <com.hsalf.smilerating.SmileRating
                    android:id="@+id/smile_rating"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:drawingColor="@color/app_icon_light"
                    app:normalColor="?attr/colorMain" />

                <Button
                    android:id="@+id/btnProceed"
                    style="@style/AppTheme.Button"
                    android:layout_margin="@dimen/app_margin_max"
                    android:text="@string/btn_submit" />
            </LinearLayout>
        </LinearLayout>
        <!--</android.support.v4.widget.NestedScrollView>-->

        <include
            android:id="@+id/extra_view"
            layout="@layout/layout_extra_view"
            android:layout_below="@+id/toolbar"
            tools:visibility="gone" />

        <WebView
            android:id="@+id/wv_advertiseMent_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:foregroundGravity="center"
            android:visibility="visible" />
    </RelativeLayout>
</layout>