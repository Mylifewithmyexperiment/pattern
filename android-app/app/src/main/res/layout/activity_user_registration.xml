<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_header">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/parent"
        style="@style/match_match"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/scrollable_toolbar" />


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollMainContainer"
            style="@style/match_match"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                style="@style/match_wrap"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_margin_max">


                <ImageView
                    android:id="@+id/prepaidImage"
                    style="@style/AppTheme.ImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/banner1_red_prepaid"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_15sdp"
                    android:background="@drawable/background_rounded_corner"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        style="@style/AppTheme.TextView.Bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/registration_title_text"
                        android:textColor="?attr/colorMain" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_margin"
                        android:orientation="vertical">

                        <TextView
                            style="@style/AppTheme.TextView.Register"
                            android:text="@string/hint_lbl_name" />


                        <EditText
                            android:id="@+id/edtName"
                            style="@style/AppTheme.EditText"
                            android:layout_margin="0dp"
                            android:hint="@string/hint_lbl_name"
                            android:inputType="textCapSentences|textCapWords" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/iedtName"
                            style="@style/AppTheme.TextInputLayout"
                            android:layout_margin="0dp">

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/AppTheme.TextView.Register"
                            android:text="@string/hint_lbl_mobile" />


                        <EditText
                            android:id="@+id/edtMobileNo"
                            style="@style/AppTheme.EditText"
                            android:layout_margin="0dp"
                            android:hint="@string/hint_lbl_mobile"
                            android:inputType="number"
                            android:maxLength="13"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/iedtMobileNo"
                            style="@style/AppTheme.TextInputLayout"
                            android:layout_margin="0dp">

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/AppTheme.TextView.Register"
                            android:text="@string/hint_lbl_email" />


                        <EditText
                            android:id="@+id/edtEmailId"
                            style="@style/AppTheme.EditText"
                            android:layout_margin="0dp"
                            android:hint="@string/hint_lbl_email"
                            android:inputType="textEmailAddress"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/iedtEmailId"
                            style="@style/AppTheme.TextInputLayout"
                            android:layout_margin="0dp">

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            style="@style/AppTheme.TextView.Register"
                            android:text="@string/hint_lbl_country" />


                        <EditText
                            android:id="@+id/edtCity"
                            style="@style/AppTheme.EditText"
                            android:layout_margin="0dp"
                            android:hint="@string/hint_lbl_country"
                            android:imeOptions="actionDone"
                            android:inputType="textCapSentences|textCapWords"
                            android:padding="@dimen/_5sdp"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/iedtCity"
                            style="@style/AppTheme.TextInputLayout"
                            android:layout_margin="0dp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnContinue"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/app_margin"
                        android:background="@drawable/button_rounded_corner"
                        android:onClick="onButtonClicked"
                        android:text="@string/proceed" />


                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/extra_view"
            layout="@layout/layout_extra_view"
            tools:visibility="gone" />

    </android.support.design.widget.CoordinatorLayout>
</layout>

