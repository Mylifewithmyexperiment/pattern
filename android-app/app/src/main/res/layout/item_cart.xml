<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <android.support.v7.widget.CardView
        style="@style/match_wrap"
        android:layout_margin="@dimen/app_margin"
        android:elevation="@dimen/app_card_elevation_medium"
        app:cardCornerRadius="@dimen/app_card_corner_radius_medium">

        <LinearLayout
            style="@style/match_match"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/rl_category_image"
                android:layout_width="@dimen/app_cart_image_width"
                android:layout_height="@dimen/app_cart_image_height"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_item_image"
                    style="@style/match_match"
                     />


                <ProgressBar
                    android:indeterminateTint="@color/white"
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/app_progress_bar_height"
                    android:layout_height="@dimen/app_progress_bar_width"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/llrl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_item_name"
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="Name"
                    android:textSize="@dimen/app_text_regular_medium" />

                <TextView
                    android:id="@+id/tv_item_description"
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_below="@id/tv_item_name"

                    android:maxLines="2"
                    android:minLines="2"
                    android:text="description"
                    android:textColor="@color/app_default_text_color"
                    android:textSize="@dimen/app_text_medium_high" />

                <RelativeLayout
                    android:id="@+id/rl_price"
                    style="@style/match_wrap"
                    android:layout_below="@id/tv_item_description"
                    android:layout_marginBottom="@dimen/app_margin_min"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_lbl_price"
                        style="@style/AppTheme.TextView"
                        android:text="@string/lbl_price"
                        android:textSize="@dimen/app_text_regular_medium"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/AppTheme.TextView"
                        android:layout_alignBaseline="@id/tv_lbl_price"
                        android:layout_toEndOf="@id/tv_lbl_price"
                        android:layout_toRightOf="@id/tv_lbl_price"
                        android:textSize="@dimen/app_text_regular_medium" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_qty_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_price"
                    android:layout_marginBottom="@dimen/app_margin_min">

                    <LinearLayout
                        android:id="@+id/llquantity"
                        style="@style/match_wrap"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/quantity"
                            style="@style/AppTheme.TextView"
                            android:layout_below="@+id/lltv_category_discount"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lbl_quantity"
                            android:textSize="@dimen/app_text_medium_high" />

                        <ImageView
                            android:id="@+id/imgminus"
                            style="@style/AppTheme.ImageView.SmallButton"
                            app:srcCompat="@drawable/ic_minus_circular_button" />
                        <!-- android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"-->
                        <TextView
                            android:id="@+id/tvquantity"
                            style="@style/AppTheme.TextView"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/app_text_medium_high" />

                        <ImageView
                            android:id="@+id/imgplus"
                            style="@style/AppTheme.ImageView.SmallButton"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_add_circular_button" />


                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    style="@style/match_wrap"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_qty_container">

                    <TextView
                        android:id="@+id/tvLblRowTotal"
                        style="@style/AppTheme.TextView.Bold"
                        android:text="@string/lbl_row_total"
                        android:textSize="@dimen/app_text_regular_medium" />

                    <TextView
                        android:id="@+id/tvRowTotal"
                        style="@style/AppTheme.TextView.Bold"
                        android:layout_toEndOf="@id/tvLblRowTotal"
                        android:layout_toRightOf="@id/tvLblRowTotal"
                        android:textSize="@dimen/app_text_regular_medium" />

                    <ImageView
                        android:id="@+id/imgdelete"
                        style="@style/AppTheme.ImageView.SmallButton"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_delete"
                        />

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>