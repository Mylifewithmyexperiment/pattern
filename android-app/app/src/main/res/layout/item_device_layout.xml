<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/app_bg_color"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/app_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeviceName"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:background="@color/color_plan_title"
                android:gravity="center"
                android:padding="@dimen/app_padding_min"
                android:text="Red Entertainment+"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/app_text_max_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivDevice"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="@dimen/app_padding"
                        android:src="@drawable/mobile_ss" />

                </RelativeLayout>

                <View
                    style="@style/AppTheme.Separator"
                    android:layout_width="@dimen/_1sdp"
                    android:visibility="gone"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="@dimen/app_padding">

                    <RelativeLayout
                        android:id="@+id/relPrice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAfterDiscountPrice"
                            style="@style/AppTheme.TextView.Bold"
                            android:textSize="@dimen/app_text_regular_medium"
                            android:text="@string/txt_price" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:layout_weight="0.8"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvPrice"
                                style="@style/AppTheme.TextView.Bold"
                                android:text="$ 2000"
                                android:textColor="@color/app_default_text_color"
                                android:textSize="@dimen/app_text_medium_high" />

                            <TextView
                                android:id="@+id/tvSaved"
                                style="@style/AppTheme.TextView.Bold"
                                android:layout_marginStart="@dimen/app_margin"
                                android:text="You save $ 2000"
                                android:textColor="@color/app_default_text_color"
                                android:textSize="@dimen/app_text_medium_high" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvStock"
                            style="@style/AppTheme.TextView.Bold"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/app_margin_min"
                            android:background="@color/shader_color"
                            android:padding="@dimen/app_padding_min"
                            android:text="In Stock"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/app_text_medium_high" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvBuyNow"
                            style="@style/AppTheme.TextView"
                            android:layout_marginTop="@dimen/app_margin_min"
                            android:background="@drawable/button_rounded_corner"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingEnd="@dimen/app_padding"
                            android:paddingStart="@dimen/app_padding"
                            android:paddingTop="@dimen/_2sdp"
                            android:text="@string/btn_buy_now"
                            android:textColor="@color/app_text_color_light"
                            android:textSize="@dimen/app_text_medium_high" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</layout>