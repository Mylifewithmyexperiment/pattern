<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/listContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/app_padding"
    tools:background="@color/navigation_menu_color">
    <TextView
        android:id="@+id/tvTitle"
        style="@style/AppTheme.TextView.NavigationMenu.Bold"
        tools:text="Title"/>
    <View
        android:id="@+id/viewSeparator"
        style="@style/AppTheme.NavigationSeparator"
        android:layout_below="@id/tvTitle"
        />

    <com.sterlite.dccmappfordealersterlite.customView.CustomRecyclerView
        android:id="@+id/rvFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:visibility="visible"
        android:layout_below="@id/viewSeparator"
        tools:listitem="@layout/item_checkbox_with_search_results"
        tools:itemCount="4"/>
</RelativeLayout>
</layout>