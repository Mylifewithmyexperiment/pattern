<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_min">

        <LinearLayout
            style="@style/match_wrap"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <View style="@style/AppTheme.StartLineView" />

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/relOrderNoContainer"
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/app_margin_min"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin_min"
                    android:layout_marginTop="@dimen/app_margin_min"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTheme.TextView.Small"
                        android:text="#" />

                    <TextView
                        android:id="@+id/tvOrderNoLbl"
                        style="@style/AppTheme.TextView.Small"
                        android:text="@string/lbl_order_no" />


                    <TextView
                        android:id="@+id/tvOrderNo"
                        style="@style/AppTheme.TextView.Small" />


                    <TextView
                        android:id="@+id/tvStatus"
                        style="@style/AppTheme.TextView"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:textColor="@color/app_default_text_color"
                        android:visibility="invisible"/>

                </LinearLayout>

                <View
                    android:id="@+id/viewSeparator"
                    style="@style/AppTheme.SeparatorWithoutMargin"
                    android:layout_marginBottom="@dimen/app_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOrderDate"
                        style="@style/AppTheme.TextView.Small" />


                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_image_place_holder" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/AppTheme.TextView"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/app_text_xx_large" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:src="@drawable/ic_right_arrow_red" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/AppTheme.TextView.Small"
                        android:maxLines="2"
                        android:textColor="@color/app_default_text_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnActive"
                        style="@style/AppTheme.Button.Small"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/app_margin_min"
                        android:layout_weight="1"
                        android:text="@string/btn_activate" />

                    <Button
                        android:id="@+id/btnTrack"
                        style="@style/AppTheme.Button.Small"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/app_margin_min"
                        android:layout_weight="1"
                        android:text="@string/btn_track" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>


