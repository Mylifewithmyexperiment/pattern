<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/app_bg_color"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/app_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlanTitle"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:background="?attr/colorMain"
                android:gravity="center"
                android:padding="@dimen/app_padding"
                android:text="Red Entertainment+"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/app_text_max" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linPlanData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/tvPlanData"
                            style="@style/AppTheme.TextView.Bold"
                            android:layout_marginTop="@dimen/app_margin"
                            android:text="100GB"
                            android:textSize="@dimen/app_text_max" />

                        <TextView
                            style="@style/AppTheme.TextView"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="data"
                            android:textSize="@dimen/app_text_regular_medium" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvRollover"
                        style="@style/AppTheme.TextView"
                        android:layout_below="@+id/linPlanData"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/app_margin_min"
                        android:text="Rollover upto 200GB"
                        android:textSize="@dimen/app_text_medium"
                        android:visibility="gone"/>
                </RelativeLayout>

                <View
                    style="@style/AppTheme.Separator"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/AppTheme.TextView.Bold"
                            android:text="$ 2000"
                            android:textSize="@dimen/app_text_max" />

                        <TextView
                            style="@style/AppTheme.TextView"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="per month"
                            android:textSize="@dimen/app_text_regular_medium"
                            android:visibility="gone"/>
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_plan_background">

                <TextView
                    style="@style/AppTheme.TextView"
                    android:id="@+id/tvCallRates"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/app_margin_min"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:padding="@dimen/app_padding_min"
                    android:singleLine="false"
                    android:textSize="@dimen/app_text_min_medium" />

                <View
                    style="@style/AppTheme.Separator"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/AppTheme.TextView"
                    android:id="@+id/tvSMS"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/app_margin_min"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:padding="@dimen/app_padding_min"
                    android:singleLine="false"
                    android:textSize="@dimen/app_text_min_medium" />

                <View
                    style="@style/AppTheme.Separator"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/AppTheme.TextView"
                    android:id="@+id/tvPlanValidity"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/app_margin_min"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:padding="@dimen/app_padding_min"
                    android:singleLine="false"
                    android:textSize="@dimen/app_text_min_medium" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</layout>