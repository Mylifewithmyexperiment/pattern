<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/app_bg_color"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/app_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlanTitle"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:background="?attr/colorMain"
                android:gravity="center"
                android:padding="@dimen/app_padding"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/app_text_max" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linPlanData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvTopMsg"
                            style="@style/AppTheme.TextView.Bold"
                            android:textSize="@dimen/app_text_max" />

                      <!--  <TextView
                            style="@style/AppTheme.TextView"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="&#45;&#45;"
                            android:textSize="@dimen/app_text_regular" />-->
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/color_plan_background">

                <TextView
                    android:id="@+id/tvLeftMsg"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/app_margin_min"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:gravity="center"
                    android:padding="@dimen/app_padding_min"
                    android:singleLine="false"
                    android:text="--"
                    android:textSize="@dimen/app_text_min_medium" />

                <View
                    style="@style/AppTheme.Separator"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/app_margin_min"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:gravity="center"
                    android:padding="@dimen/app_padding_min"
                    android:singleLine="false"
                    android:text=""
                    android:textSize="@dimen/app_text_min_medium" />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</layout>