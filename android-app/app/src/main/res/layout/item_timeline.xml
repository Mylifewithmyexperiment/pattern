<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:orientation="horizontal">

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/time_marker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:line="?attr/colorMain"
            app:lineSize="@dimen/_3sdp"
            app:markerSize="@dimen/_20sdp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/app_margin"
            app:cardBackgroundColor="@color/app_bg_color"
            app:cardCornerRadius="@dimen/app_card_corner_radius_medium"
            app:cardElevation="@dimen/app_card_elevation"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View style="@style/AppTheme.StartLineView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/app_margin_max">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_timeline_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        tools:text="24 JAN" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_timeline_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_min"
                        android:textColor="@android:color/black"
                        tools:text="Order Successfully Completed" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_min"
                        android:maxLines="4"
                        android:singleLine="false"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="24 JAN" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>